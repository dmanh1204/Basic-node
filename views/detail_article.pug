extends layout 

block content
    h1 #{title}
    table.table
        thead
            tr
            th(scope='col') #
            th(scope='col') Title
            th(scope='col') Author
            th(scope='col') Content
            th(scope='col') Edit/Remove
        tbody
            tr
            th(scope='row') 1
            td= article.title
            td #{article.author}
            td #{article.body}
            td
                a.btn.btn-primary(href='/article/edit/'+article._id) Edit
                a.btn.btn-danger(href='#') Remove
